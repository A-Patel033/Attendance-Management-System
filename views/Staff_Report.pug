                    | Attendance
                form.reportSidebarform(action="/Staff/sendMailPage", method="get") 
                  button.reportSidebarBtn
                    i.fas.fa-envelope.mr-2
                    | Send Mail
                form.reportSidebarform(action="", method="get") 
                  button.reportSidebarBtn
                    i.fas.fa-address-book.mr-2
                    | Contact
      // Whole Course List Column
      .col-xl-9.bg-light
        .mainArea(style="display:")
          #courseSelect.courseSelect
            form#courseSelectionforAttendance(action="/Staff/see_Attendance" method="POST" )
                    .form-group
                      select#cars(name='courseCode')
                        each n in list
                          option(value=n.CourseCode)=n.CourseName             
                    .form-group
                      select#Intake(name='Intake')
                        option.attribute(value='none' disabled selected) Intake
                        option.attribute(value='Intake1') 2021 Intake 1
                        option.attribute(value='Intake2') 2021 Intake 2
                    .form-group
                      label.dateforcourse(name='AttendanceDate') Date :
                      input#todayDate(type='date' name='AttendanceDate')
                    .form-group
                      button#loadStudent.loadStudent
                        |See Attendance
          #oneCourseSelect.oneCourseSelect(style="margin-top: 60px")
            form#courseSelectionforAttendance(action="/Staff/oneCourseReport" method="POST" )
                    .form-group
                      select#cars(name='courseCode')
                        each n in list
                          option(value=n.CourseCode)=n.CourseName             
                    .form-group
                      select#Intake(name='Intake')
                        option.attribute(value='none' disabled selected) Intake
                        option.attribute(value='Intake1') 2021 Intake 1
                        option.attribute(value='Intake2') 2021 Intake 2
                    .form-group
                      button#loadStudent.loadStudent(style="padding: 5px; border-radius: 5px;")
                        |One Course Report      
