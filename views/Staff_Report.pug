    // Content
    #content.row
      #sidebar(class="col-sm-2.5")
          .sidebarReport
                form.reportSidebarform(action="/adminAndStaffHomePage", method="get") 
                  button.reportSidebarBtn
                    i.fas.fa-home.mr-2
                    | Home
                form.reportSidebarform(action="/Staff/Staff_Student", method="get") 
                  button.reportSidebarBtn
                    i.fas.fa-user-graduate.mr-2
                    | Students
                form.reportSidebarform(action="/Staff/Staff_Course", method="get") 
                  button.reportSidebarBtn
                    i.fas.fa-book.mr-2
                    | Courses
                form.reportSidebarform(action="/Staff/fullReport", method="POST") 
                  button.reportSidebarBtn
                    i.fas.fa-chart-line.mr-2
