  body
    // NAvigation Bar
    nav.navbar.navbar-expand-md.sticky-top
      #navbar.container-fluid
        a.navbar-brand(href="#")
          img(src="/Static/23091b7e-c2a2-4baf-8b23-182d2168fb6a_200x200.png")
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            b
              li.nav-item
                a.nav-link(href="/adminAndStaffHomePage") Home
            b
              li.nav-item
                a.nav-link(href="#") About
            b
              li.nav-item
                a.nav-link(href="/Staff/Enroll_Student") Enroll
            b
              li.nav-item
                a.nav-link(href="/Admin/adminProfile")
                  button#profileBtn.btn.p-0(type="button")=userName
            b
              li.nav-item
                a.nav-link(href="/Logout") Log Out
    .functionBtn 
    // Content
    #content.row
      #sidebar(class="col-sm-2.5")
        .wrapper
          .sidebar
            ul
              li
                a(href="/adminAndStaffHomePage")
                  i.fas.fa-home
                  | Home
              li
                a(href="/Staff/Staff_Student")
                  i.fas.fa-user-graduate
                  | Students
              li
                a(href="/Staff/Staff_Course")
                  i.fas.fa-book
                  | Courses
              li
                a(href="/Staff/Staff_Atten")
                  i.fas.fa-address-book
                  | Attendance
              li
                a(href="/Staff/Staff_Report")
                  i.fas.fa-chart-line
                  | Report
              li
                a(href="#")
                  i.fas.fa-envelope
                  | Send Email
              li
                a(href="#")
                  i.fas.fa-address-book
                  | Contact
      // Whole Course List Column
      .col-xl-9.bg-light
        #listheading.row.mt-1
          .headingName
            h4
              i.fas.fa-book.mr-3
              h4(name="getselected_CourseCode")=seleted_CouseCode
              h4(name="getselected_Course")=selected_Course
          .dateAndIntake.mt-1
            .Intake 
              h6=intake
            .date
              h6= selectedDate
        .table-responsive.pd-2
          .note 
              details
                  summary 
                    strong Click for Instruction
                  p
                    |  please to be inform you that below each row in table format is "ID" || "Name".
          #wrapper
            form#studentlist_form(action="/Staff/save_Attendance", method="post")
              .form-group#disable_selectDropdown
                select#cars(name="course_code")
                  option(style="padding: 10px")=seleted_CouseCode 
                select#cars(name="course_name")
                  option(style="padding: 10px")=selected_Course
                select#cars(name="Intake")
                  option(style="padding: 10px")=intake
                select#cars(name="date")
                  option(style="padding: 10px")=selectedDate
              .form-group#studentListForAttendance_table
                select.select(multiple size=10 name='ID' style="width: 100%")
                  each n in list
                    option(style="padding:5px; margin:3px; border-bottom: 1px solid #6648b1" value=n.ID)=`${n.ID}  ||  ${n.name}`
              .form-group
                button#loadStudent.loadStudent
                  |Save Attendance        
        // Footer Section
        .row.pb-2
          footer(style="clear: both; margin-top:10px")
            .container-fluid.padding
              #socialmedia.container-fluid
                .row.text-center
