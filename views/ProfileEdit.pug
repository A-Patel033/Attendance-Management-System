                .form-group.col-md-4
                    label(for='state') State
                    input#inputCity.form-control(type='text' name="state" placeholder="State" value=state)
                .form-group.col-md-2
                    label(for='postcode') PostCode
                    input#inputZip.form-control(type='text' name="postcode" placeholder="Postcode" value=postcode)
            .form-group
                label(for='contact') Contact No
                input#inputAddress.form-control(type='text', name="contact" placeholder='Contact No' value=mNumber)
            .form-group(style="justify-content: center; display: flex")
